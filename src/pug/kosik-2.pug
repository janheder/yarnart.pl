doctype html
include partials/_variables.pug  
html(lang=lang)
    include partials/_header.pug  
    body
        include partials/_modal-login.pug
        header.o-header
            include partials/_navMain.pug
        section.o-cartNav
            .container.o-cartNav__container
                .o-cartNav__single.-complete
                    .o-cartNav__number 1
                    .o-cartNav__title Nákupní košík
                    
                .o-cartNav__single.-active
                    .o-cartNav__number 2
                    .o-cartNav__title Doprava a platba
                    
                .o-cartNav__single
                    .o-cartNav__number 3
                    .o-cartNav__title Osobní údaje
                    
                .o-cartNav__single
                    .o-cartNav__number 4
                    .o-cartNav__title Shrnutí objednávky


        section.o-cartNavResponsive
            a.o-cartNavResponsive__link.-prev(href="/kosik.html?krok=1")
                span.a-icon.-cheveron.o-cartNavResponsive__icon
            p.o-cartNavResponsive__title 2/4 Doprava a platba
            a.o-cartNavResponsive__link.-next(onclick="$('#delivery-form-submit').trigger('click');")
                span.a-icon.-cheveron.o-cartNavResponsive__icon

        .a-cartNavResponsivePush

        main
            .container
                .row

                    .col-12.col-sm-12.col-md-12.col-lg-9

                        form.o-cartDeliveryForm(method="post" action="" name="delivery_form" id="delivery_form")
                        
                            h2.o-cartDeliveryForm__title Zvolte způsob dopravy

                            .o-cartDeliveryForm__item
                                .o-form__group.m-formGroup.-radiobutton
                                    input.m-formGroup__input(type="radio" name="doprava" id="delivery_form_delivery-1" required)
                                    span.m-formGroup__radiobutton.a-radiobutton
                                    label.m-formGroup__label.-bold(for="delivery_form_delivery-1") Osobní odběr
                                        span.m-formGroup__text na adrese Paskov, rudé armády 77 (po osobní tel. domluvě)
                                    label.m-formGroup__price(for="delivery_form_delivery-1") 0 Kč

                            .o-cartDeliveryForm__item
                                .o-form__group.m-formGroup.-radiobutton
                                    input.m-formGroup__input(type="radio" name="doprava" id="delivery_form_delivery-2" required checked)
                                    span.m-formGroup__radiobutton.a-radiobutton
                                    label.m-formGroup__label.-bold(for="delivery_form_delivery-2") GLS
                                        span.m-formGroup__text přepravní společnost
                                    label.m-formGroup__price(for="delivery_form_delivery-2") 149 Kč



                            h2.o-cartDeliveryForm__title Zvolte způsob platby

                            .o-cartDeliveryForm__item
                                .o-form__group.m-formGroup.-radiobutton
                                    input.m-formGroup__input(type="radio" name="platba" id="delivery_form_payment-1" required checked)
                                    span.m-formGroup__radiobutton.a-radiobutton
                                    label.m-formGroup__label.-bold(for="delivery_form_payment-1") V hotovosti
                                        span.m-formGroup__text Zaplatíte osobně na prodejně
                                    label.m-formGroup__price(for="delivery_form_payment-1") 10 Kč

                            .o-cartDeliveryForm__item
                                .o-form__group.m-formGroup.-radiobutton
                                    input.m-formGroup__input(type="radio" name="platba" id="delivery_form_payment-2" required disabled)
                                    span.m-formGroup__radiobutton.a-radiobutton
                                    label.m-formGroup__label.-bold(for="delivery_form_payment-2") Dobírka
                                        span.m-formGroup__text Celkovou částku zaplatíte při dodání zboží
                                    label.m-formGroup__price(for="delivery_form_payment-2") 10 Kč

                            .o-cartDeliveryForm__item
                                .o-form__group.m-formGroup.-radiobutton
                                    input.m-formGroup__input(type="radio" name="platba" id="delivery_form_payment-3" required)
                                    span.m-formGroup__radiobutton.a-radiobutton
                                    label.m-formGroup__label.-bold(for="delivery_form_payment-3") Převodem
                                        span.m-formGroup__text celkovou částku převedete na náš účet předem
                                    label.m-formGroup__price(for="delivery_form_payment-3") 0 Kč


                            .m-cartButtons
                                a.btn.-dark(href="#") Krok zpět
                                button.btn(type="submit" id="delivery-form-submit") Osobní údaje #[span.a-btnIcon #[span.a-icon.-cheveron.-white]]



                    .col-12.col-sm-12.col-md-12.col-lg-3
                        .m-cartOverview(data-price="10000")
                            .m-cartOverview__title Shrnutí objednávky
                           
                            .m-cartOverview__productSingle

                                .m-cartOverview__productThumb
                                    img.m-cartOverview__productImg(src=URLbase+"img/product-thumb-small.jpg" at="#" title="#")

                                .m-cartOverview__productContent
                                    .m-cartOverview__productTitle Kočárek Lonex Speedy Vogue a dlouhý název lorem ipsum dolor sit amet
                                    .m-cartOverview__productSub
                                        .m-cartOverview__productNumber 1 kus/ů
                                        .m-cartOverview__productPrice 18 546 Kč

                            .m-cartOverview__productSingle

                                .m-cartOverview__productThumb
                                    img.m-cartOverview__productImg(src=URLbase+"img/product-thumb-small.jpg" at="#" title="#")

                                .m-cartOverview__productContent
                                    .m-cartOverview__productTitle Kočárek Lonex Speedy Vogue a dlouhý název lorem ipsum dolor sit amet
                                    .m-cartOverview__productSub
                                        .m-cartOverview__productNumber 1 kus/ů
                                        .m-cartOverview__productPrice 18 546 Kč                     

                            .m-cartOverview__shipping
                                .m-cartOverview__shippingText Způsob dopravy
                                .m-cartOverview__shippingWrap
                                    .m-cartOverview__shippingTitle Nevybráno
                                    .m-cartOverview__shippingNumber

        

                            .m-cartOverview__payment
                                .m-cartOverview__paymentText Způsob platby
                                .m-cartOverview__paymentWrap
                                    .m-cartOverview__paymentTitle Nevybráno 
                                    .m-cartOverview__paymentNumber

                           

                            .m-cartOverview__price
                                .m-cartOverview__priceText Celková cena s DPH
                                .m-cartOverview__priceTitle 10 000 Kč         



                    
            .m-cartBarResponsive
                .m-cartBarResponsive__priceWrap
                    p.m-cartBarResponsive__text Celková cena s DPH
                    h3.m-cartBarResponsive__price #[span 65 599] Kč
                .m-cartBarResponsive__btnWrap
                    button.btn.m-cartBarResponsive__btn(onclick="$('#delivery-form-submit').trigger('click');") Osobní údaje #[span.a-btnIcon #[span.a-icon.-cheveron.-white]] 

        include partials/_footer.pug

        include partials/_js-include.pug