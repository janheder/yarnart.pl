                                            span.m-formGroup__error Nieprawidłowy Imię
                                            span.m-formGroup__success
                                            
                                    .col-12.col-md-6
                                        .o-form__group.m-formGroup       
                                            input.m-formGroup__input(type="text" name="register_form_surname" id="register_form_surname" autocomplete="family-name" required placeholder=" ")
                                            label.m-formGroup__label(for="register_form_surname") Nazwisko
                                            span.m-formGroup__error Nieprawidłowy Nazwisko
                                            span.m-formGroup__success

                                    .col-12.col-md-6
                                        .o-form__group.m-formGroup
                                            input.m-formGroup__input(type="email" name="register_form_email" id="register_form_email" autocomplete="email" required placeholder=" ")
