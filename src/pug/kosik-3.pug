                                            label.m-formGroup__label(for="register_form_tel") Numer telefonu
                                            span.m-formGroup__error Nieprawidłowy Numer telefonu
                                            span.m-formGroup__success


                                .o-form__divider.m-formDivider Adres

                                .row
                                    .col-12.col-md-9
                                        .o-form__group.m-formGroup
                                            input.m-formGroup__input(type="text" name="register_form_address" id="register_form_address" autocomplete="street-address" required placeholder=" ")
                                            label.m-formGroup__label(for="register_form_address") Ulica
                                            span.m-formGroup__error Nieprawidłowy Ulica
                                            span.m-formGroup__success

                                    .col-12.col-md-3
                                        .o-form__group.m-formGroup
                                            input.m-formGroup__input(type="number" name="register_form_descriptive" id="register_form_descriptive" autocomplete="descriptive-address" required placeholder=" ")
                                            label.m-formGroup__label(for="register_form_descriptive") Numer domu
                                            span.m-formGroup__error Nieprawidłowy Numer domu
