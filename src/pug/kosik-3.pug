                                .o-cartNav__heading
                                    .o-cartNav__number 1
                                    .o-cartNav__title Koszyk na zakupy
                                .o-cartNav__content
                                    .o-cartNav__text 1x Lorem ipsum product #[span 99 zł]
                                    .o-cartNav__text 1x Lorem ipsum product #[span 99 zł]
                                    a.o-cartNav__link(href="#") Edytuj
                                
                            .o-cartNav__single.-active
                                .o-cartNav__heading
                                    .o-cartNav__number 2
                                    .o-cartNav__title Dane osobowe
                                .o-cartNav__content
                                    .o-cartNav__text.-empty Niepubliczny
                                
                            .o-cartNav__single
                                .o-cartNav__heading
                                    .o-cartNav__number 3
                                    .o-cartNav__title Podsumowanie
                                .o-cartNav__content
                                    .o-cartNav__text.-empty Niepubliczny

                            .o-cartNav__single
                                .o-cartNav__heading
                                    .o-cartNav__number 4
                                    .o-cartNav__title Wykończenie



                    .col-12.col-lg-9.cart__col

                        .a-cartResponsiveError Podaj swoje dane osobowe lub zaloguj się.

                        form.o-form.-paddingRight(method="post" action="" name="register_form" id="register_form")
